extends ../layout

block content
    h1= title
    hr
    .container.col-sm-10
        form.form-signin.col-lg-12(action="/events/create", method="post")
            h2.form-signin-heading Create an event
            input.input-block-level.col-lg-12.form-row.form-field(type="text", name="title", placeholder="Event Title")
            textarea.input-block-level.col-lg-12.form-row.form-field(name="description", placeholder="Description...")
            input.input-block-level.col-lg-12.form-row.form-field(type="text", name="datetime", placeholder="dd/mm/yyyy", class="datetimepicker")
            input.input-block-level(type="hidden", name="userId", value="#{cookie.id}")
            if (errors)
                .error-container.col-lg-12
                    each error in errors
                        .error-row.col-lg-12 #{error.msg}
            button.btn.btn-large.btn-primary.col-lg-12.form-submit(type="submit") Create Event
