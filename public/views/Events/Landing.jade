extends ../layout

block content
	h1= event.title
	if (event.user != null)
		if (event.user._id == cookie)
			a.btn.btn-danger.delete.event-btn.pull-right(href="/events/delete/#{event._id}") #[i.fa.fa-times] Delete
			a.btn.btn-danger.edit.event-btn.pull-right(href="/events/edit/#{event._id}") #[i.fa.fa-pencil-alt] Edit

		p Created by&nbsp;
			a(href="/users/profile/#{event.user._id}") #{event.user.name}

		if (event.user._id == cookie)
			.clear-both

	p= event.description

